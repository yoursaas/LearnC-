#include <iostream>

int main() {
    const int size = 5;
    int vector[size] = {3, 5, 1, 4, 2};

    int* min_element = &vector[0];
    int* max_element = &vector[0];

    for (int i = 1; i < size; ++i) {
        if (*min_element > vector[i]) {
            min_element = &vector[i];
        }
        if (*max_element < vector[i]) {
            max_element = &vector[i];
        }
    }

    std::cout << "Min element: " << *min_element << std::endl;
    std::cout << "Max element: " << *max_element << std::endl;

    return 0;
}
